
<%# Searchbar %>
<div class="ginny-show">
  <div class=" container px-4 pagination justify-content-center">
    <%= simple_form_for :search, url: profiles_path, method: :get, data: { controller: "search-form" } do |f| %>
      <div class="row">
        <div class="col align-self-enter">
          <%= f.input :username,
            input_html: { value:  params.dig(:search, :username) },
            class: "form-control",
            placeholder: "Rechercher un.e ami.e ou membre",
            label: false
          %>
        </div>
      </div>
      <% end %>
  </div>
<%# Friend list %>
  <div class="container ginny-show px-2">
    <div class="user-profil-list">
      <% @profiles.each do |profile| %>
      <div class= "user-profil-card">
        <% if profile.photo.attached?%>
          <%= cl_image_tag profile.photo.key, class: "avatar-xxl mb-3", width: 200 %>
        <% end %>
        <h2 class="profil-username"><%= link_to "#{profile.username }", profile_path(profile) %></h2>
        <p><%= pluralize(profile.favorites.count, "praticien.ne suivi.e", "praticien.ne suivi.e.s") %></p>
        <%= link_to "AbonnÃ©.e", new_invite_path, class: "follow-button" %>
      </div>
      <% end %>
    </div>
    <div class='d-flex justify-content-center p-3'>
      <%= link_to "Inviter un.e ami.e", new_invite_path, class: "button-secondary py-2" %>
    </div>
  </div>
</div>
