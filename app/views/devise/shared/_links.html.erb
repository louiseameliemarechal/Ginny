<%- if controller_name != 'sessions' %>
  <p class="light-text"><%= link_to "Me connecter", new_session_path(resource_name) %></p><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="black-color smaller-text m-0"><u><%= link_to "Créer un compte", new_registration_path(resource_name) %></u></p><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="light-text"><%= link_to "Mot de passe oulié", new_password_path(resource_name) %></p><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Je n'ai pas reçu le mail d'instructions", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Je n'ai pas reçu le mail", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Me connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
