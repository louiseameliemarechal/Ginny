

<%= form_tag doctors_path, method: :get, data: { controller: "search-form" } do %>
  <%= text_field_tag :speciality,
    params[:speciality],
    class: "form-control",
    placeholder: "La spécialité de mon praticien"
  %>

  <%= text_field_tag :address,
    params[:address],
    class: "form-control",
    placeholder: "L'adresse de mon praticien"
  %>

<%= link_to 'Filtres avancés', ''  %>

  <div class="advanced_filters d-none">

    <%= text_field_tag :gender,
      params[:gender],
      class: "form-control",
      placeholder: "Le genre de mon praticien"
    %>

    <%= text_field_tag :profession,
      params[:profession],
      class: "form-control",
      placeholder: "La profession de mon praticien"
    %>

    <%= text_field_tag :convention,
      params[:convention],
      class: "form-control",
      placeholder: "La convention de mon praticien"
    %>

  </div>

  <%= submit_tag "Search", class: "btn btn-primary" %>

<% end %>
