<div class="map-container">
  <div id="map" class="map"
      style="width: 100%; height: 220px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="doctor-list">
  <% @doctors.each do |doctor| %>
    <div class='box-bordered'>
      <div class ='doctor-card'>
        <div class="doctor-card-text">
          <h4>
            <%= link_to " #{doctor.first_name.capitalize} #{doctor.last_name.capitalize}", doctor_path(doctor, backlink: params[:search].nil? ? 'home' : 'filtered'), :class => "stretched-link" %>
          </h4>
          <p><%= "#{doctor.street}" %></p>
          <p><%= "#{doctor.city}" %></p>
        </div>
        <div class="doctor-card-tag">
          <div class='tag p-2 <%=doctor.profession%>' >
            <%= "#{doctor.profession.capitalize}" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


