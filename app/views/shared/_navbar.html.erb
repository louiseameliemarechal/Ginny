        <%= image_tag 'avatar-par-defaut.jpg', class: "avatar", id: "navbarDropdown" %>
      <% end %>
    </div>
  <% else %>
<div class="nav-item">
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    </div>
  <% end %>
</div>

