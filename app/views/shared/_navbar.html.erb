<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to doctors_path, class: "navbar-brand " do %>
   <%= image_tag 'Ginny_logo.png' %>
  <% end %>

  <% if user_signed_in? %>
    <div class="nav-item dropdown" id="navbar-avatar">
      <% if current_user.photo.attached? %>
